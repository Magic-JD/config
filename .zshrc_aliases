#Alias for ls to make it look better
alias ls='eza -a --icons'
alias ll='eza -l -a --icons --git'
alias tree='eza --tree --icons'

# Use zoxide to change directory
alias cd='z'

# Neovim
alias vi='vii'
alias vim='vim -u NONE'

# Starship
alias landing='export STARSHIP_CONFIG=~/.starship-mini.toml'
alias takeoff='export STARSHIP_CONFIG=~/.starship.toml'

